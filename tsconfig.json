{
    "compilerOptions": {
        "target": "es2018", // Node.js 6
		"module": "commonjs",
		"moduleResolution": "node",
		"strictNullChecks": true,
		"noImplicitThis": true,
		// "noUnusedLocals": true,
		"lib": ["es2018"],
		"declaration": true,
		"sourceMap": true,
		"removeComments": true,

		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"jsx": "react",
		"pretty": true,
		"newLine": "lf",
		"stripInternal": true,
		// "strict": true,
		// "noImplicitReturns": true,
		// "noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noEmitOnError": true,
		// "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,

        "outDir": "lib"
    },
    "include": ["src/**/*.ts"]
}